<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/swiperefreshlayout_background_color"
    android:contentDescription="@string/no_available_data">

    <ImageView
        android:layout_width="@dimen/empty_view_icon_side"
        android:layout_height="@dimen/empty_view_icon_side"
        app:srcCompat="@drawable/ic_report_problem_black_24dp"/>

    <TextView
        android:text="@string/no_data_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"
        android:gravity="center"
        tools:text="Error message" />

</LinearLayout>