<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/til"
        style="@style/InputTextLayoutCustomStyleTotale"
        app:hintTextAppearance="@style/InputTextLayoutCustomStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dialog_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextCustomStyle"
            android:imeOptions="actionDone"
            android:hint="@string/dialog_hint"
            android:inputType="textCapCharacters"
            android:layout_marginBottom="@dimen/add_stock_dialog_margin"
            android:layout_marginLeft="@dimen/add_stock_dialog_margin"
            android:layout_marginStart="@dimen/add_stock_dialog_margin"
            android:layout_marginRight="@dimen/add_stock_dialog_margin"
            android:layout_marginEnd="@dimen/add_stock_dialog_margin"
            android:layout_marginTop="@dimen/add_stock_dialog_top_margin"/>
    </android.support.design.widget.TextInputLayout>

</FrameLayout>
