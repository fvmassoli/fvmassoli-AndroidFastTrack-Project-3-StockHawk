<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BidPriceTextStyle">
        <item name="android:textSize">@dimen/bid_price_text_style_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">@dimen/stock_symbol_text_style_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailStockTextStyle">
        <item name="android:textSize">@dimen/detail_stock_text_style_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PercentageChangeTextSize">
        <item name="android:textSize">@dimen/percent_change_text_style_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="CustomTheme.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">@dimen/Subheading</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="InputTextLayoutCustomStyle">
        <item name="android:textSize">@dimen/hint_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="InputTextLayoutCustomStyleTotale">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="EditTextCustomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/Body1</item>
        <item name="android:paddingTop">@dimen/edit_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/edit_text_padding_bottom</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>

</resources>
